{
  "name": "react-Scaffold",
  "version": "0.0.0",
  "description": "Web app scaffold with React/Node/Typescript/Webpack",
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsears/react-scaffold.git"
  },
  "scripts": {
    "build": "webpack",
    "build-front": "webpack && docker build -f Dockerfile.front . -t tsears/react-scaffold-front",
    "build-back": "docker build -f Dockerfile.back . -t tsears/react-scaffold-back",
    "lint": "eslint ./",
    "run-docker-back": "docker run --name react-scaffold-back --network dockernet --rm -p 8081:8081 tsears/react-scaffold-back",
    "run-docker-front": "docker run --name react-scaffold-front --network dockernet --env APP_SHORTNAME=reactscaffold --env APP_API_URL=http://react-scaffold-back:8081 --rm -p 9000:80 tsears/react-scaffold-front",
    "run-front": "webpack-dev-server",
    "run-back": "nodemon server/index.js --config nodemon.config.json",
    "start": "DEV=true rm -fR app/node_modules/.cache && npm-run-all --parallel run-front run-back",
    "test": "jest"
  },
  "author": "Tom Sears",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "29.5.5",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "18.0.2",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "case-sensitive-paths-webpack-plugin": "2.4.0",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.8.1",
    "dts-css-modules-loader": "2.0.1",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-disable": "^2.0.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-standard": "5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "5.5.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "mini-css-extract-plugin": "2.7.6",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "18.2.0",
    "sass-loader": "13.3.2",
    "style-loader": "3.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "typescript": "^5.2.2",
    "webpack": "5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
